# 🌟 CONFIGURACIÓN DE VARIABLES DE ENTORNO
# Copia este archivo a .env y personaliza los valores

# 🏢 Información del Proyecto
PROJECT_NAME="Agentic AI Business Hub"
VERSION="1.0.0"
DEBUG=true

# 🌐 API Configuration
API_HOST=127.0.0.1
API_PORT=8000

# 🔐 Security (¡CAMBIA ESTO EN PRODUCCIÓN!)
SECRET_KEY=your-super-secret-key-change-in-production-please

# 🗄️ Database
# Para desarrollo local (SQLite):
DATABASE_URL=sqlite:///./agentic_ai.db

# Para PostgreSQL (producción):
# DATABASE_URL=postgresql://usuario:password@localhost/agentic_ai

# Para MySQL:
# DATABASE_URL=mysql+pymysql://usuario:password@localhost/agentic_ai

# 🤖 IA Configuration
# OPCIÓN 1: OpenAI (de pago, pero muy bueno)
OPENAI_API_KEY=tu_openai_api_key_aqui

# OPCIÓN 2: Ollama (GRATIS - recomendado para empezar)
USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_MODEL=llama3.1

# 📊 Dashboard
DASHBOARD_HOST=127.0.0.1  
DASHBOARD_PORT=8501

# 📝 Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 🔄 Task Queue
REDIS_URL=redis://localhost:6379/0

# 📁 File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB en bytes

# 🚨 Email Alerts (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password

# 🌍 Environment
ENVIRONMENT=development

# 🔧 Feature Flags
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# 📈 Analytics (opcional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# 🌐 Deployment (para cuando subas a producción)
DOMAIN=localhost
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8501